{
    "name": "ukeloop/laravel-validation-rule-builder",
    "description": "Laravel validation rule builder",
    "keywords": ["laravel", "validation", "builder"],
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "ukeloop"
        }
    ],
    "require": {
        "php": ">=8.0",
        "illuminate/support": "^9.0",
        "illuminate/validation": "^9.0"
    },
    "require-dev": {
        "orchestra/testbench": "^7.0",
        "phpunit/phpunit": "^9.5",
        "phpstan/phpstan": "^1.8",
        "nunomaduro/larastan": "^2.0"
    },
    "autoload": {
        "psr-4": {
            "Ukeloop\\ValidationRuleBuilder\\": "src/",
            "Ukeloop\\ValidationRuleBuilder\\Tests\\": "tests/"
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "scripts": {
        "php-cs-fixer": "php-cs-fixer fix --diff",
        "phpstan": "phpstan analyse",
        "test": "phpunit"
    }
}
